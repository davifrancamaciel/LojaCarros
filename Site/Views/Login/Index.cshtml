@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<style type="text/css">
    .panel-heading {
        padding: 5px 15px;
    }

    .panel-footer {
        padding: 1px 15px;
        color: #A0A0A0;
    }

    .profile-img {
        width: 20px;
        height: 90px;
        margin: 0 auto 10px;
        display: block;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        border-radius: 50%;
    }
</style>


<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> Informe seu Email e Senha</strong>
                </div>

                <div style="color:red">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="panel-body">
                    @model Site.Models.UsuarioModelLogin
                    @using (Html.BeginForm("AutenticarUsuario", "Login", FormMethod.Post))
                    {
                        @Html.HiddenFor(u => u.Url)
                        <fieldset>
                            <div class="row">
                                <div class="center-block">
                                    <img class="profile-img" style="width: 90px"
                                         src="~/images/co.png" alt="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </span>
                                            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", placeholder = "Email", @Style = "autofocus" })

                                        </div>
                                        @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-lock"></i>
                                            </span>
                                            @Html.PasswordFor(u => u.Senha, new { @class = "form-control", placeholder = "Password" })

                                        </div>
                                        @Html.ValidationMessageFor(c => c.Senha, "", new { @class = "text-danger" })<div class="clearfix"></div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
                @*<div class="panel-footer ">

                    </div>*@
            </div>
        </div>
    </div>
</div>

<div class="copy-rights text-center">
    <p><a href="@Url.Action("Index", "Home", new { area = "", controller = "Home" })"><h4><i class="fa fa-home"></i>&nbsp;Home</h4></a></p>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")  
}

